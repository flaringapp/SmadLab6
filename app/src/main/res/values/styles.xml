<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Text.AppTitle" parent="Text.Title">
        <item name="android:textSize">@dimen/appTitleTextSize</item>
    </style>

    <style name="Text.DialogTitle" parent="Text.Title">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textSize">@dimen/titleDialogTextSize</item>
    </style>

    <style name="Text.DialogMessage" parent="Text.DialogTitle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">@dimen/messageDialogTextSize</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:foreground">@drawable/ripple_rounded_full</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/buttonTextColor</item>
    </style>

    <style name="Button.Command">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Button.Action">
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="Button.Action.Small">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">@dimen/buttonTextSizeSmall</item>
    </style>

    <style name="DialogActionText" parent="Text">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">16sp</item>
        <item name="android:paddingEnd">16sp</item>
        <item name="android:paddingTop">8sp</item>
        <item name="android:paddingBottom">8sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:foreground">@drawable/ripple_rounded</item>
    </style>

    <style name="Input" />

    <style name="Input.ColorPrimary">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/color_primary_opaque</item>
    </style>
</resources>
